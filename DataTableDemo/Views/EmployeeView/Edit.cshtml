@model DataTableDemo.Models.EmployeeVm

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<form>
    <div class="form-group">
        <label for="idDetail">ID</label>
        <input type="text" asp-for="Id" class="form-control" id="idDetail"  readonly="readonly">
    </div>
    <div class="form-group">
        <label for="nameInput">Name</label>
        <input type="text" asp-for="Name" class="form-control" id="nameInput" placeholder="Enter Name">
    </div>
    <div class="form-group">
        <label for="DateOfJoinInput">Date Of Join</label>
        <input type="text" asp-for="DateOfJoin" class="form-control" id="DateOfJoinInput" placeholder="Enter Date of Join">
    </div>
    <div class="form-group">
        <label for="salaryInput">Salary</label>
        <input type="text" asp-for="Salary" class="form-control" id="salaryInput" placeholder="Salary">
    </div>
  
    <div class="form-group">
        <label for="employeeTypeInput">Employee Type</label>
        <input type="text" asp-for="EmployeeType" class="form-control" id="employeeTypeInput" placeholder="Employee type">
    </div>
    <div class="form-group">
        <label for="departmentInput">Department</label>
        <input type="text" asp-for="Department" class="form-control" id="departmentInput" placeholder="Department">
    </div>
</form>
